{
  "name": "nodejs-rest-api-scaffolding",
  "version": "1.0.0",
  "description": "Scaffolding for a node/express/mongodb server.",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon --exec babel-node src/app.js",
    "debug-build": "babel src -d debug-dist --watch --source-maps",
    "build": "babel src -d dist"
  },
  "author": "guicostaarantes",
  "license": "ISC",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "wildcard",
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "extends": "standard",
    "plugins": [
      "promise"
    ],
    "rules": {
      "promise/prefer-await-to-then": "error",
      "promise/prefer-await-to-callbacks": "error"
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "babel-plugin-wildcard": "^5.0.0",
    "basic-auth": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "jsonschema": "^1.2.4",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.1.9",
    "parse-bearer-token": "^1.0.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "chai": "^4.2.0",
    "eslint": "^5.8.0",
    "eslint-plugin-promise": "^4.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.5",
    "standard": "^12.0.1"
  }
}
